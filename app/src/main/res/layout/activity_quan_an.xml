<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.QuanAnActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageviewBackQuanAn"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="0dp"
            android:src="@drawable/back" />

        <TextView
            android:id="@+id/textviewTenCuaHangQuanAn"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:gravity="right"
            android:layout_height="50dp"
            android:textSize="30sp"
            android:layout_toEndOf="@+id/imageviewBackQuanAn"
            android:padding="5dp"
            android:background="@color/white"
            android:text="TÊN QUÁN ĂN"
            tools:ignore="UnknownId" />

        <ImageView
            android:id="@+id/imageviewdelivery"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_below="@+id/imageviewBackQuanAn"
            android:background="@color/white"
            android:src="@drawable/food_delivery"
            tools:ignore="UnknownId" />

        <ListView
            android:id="@+id/listviewMonAn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/imageviewdelivery"
            android:layout_marginEnd="0dp"
            android:layout_marginBottom="2dp"
            android:scrollbars="vertical"
            tools:ignore="UnknownId" />

    </RelativeLayout>

</RelativeLayout>